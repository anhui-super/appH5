
.content{
	padding: 20rpx 25rpx;
}
.list{
	width: 100%;
}
.list .item{
	padding: 20rpx;
	height: 160rpx;
	margin-bottom: 20rpx;
	border-radius: 10rpx;
	border: 1px solid rgba(0,0,0,.1);
	border-top: none;
	position: relative;
	-webkit-box-shadow: 0 5rpx 10rpx rgba(0,0,0,.1);
	        box-shadow: 0 5rpx 10rpx rgba(0,0,0,.1);
}
.list .item .txt{
	font-size: 26rpx;
	-o-text-overflow: -o-ellipsis-lastline;
	   text-overflow: -o-ellipsis-lastline;
	overflow: hidden;
	-o-text-overflow: ellipsis;
	   text-overflow: ellipsis;
	display: -webkit-box;
	-webkit-line-clamp: 2;
	line-clamp: 2;
	-webkit-box-orient: vertical;
}
.name{
	text-align: right;
	font-size: 24rpx;
	position: absolute;
	bottom: 30rpx;
	right: 20rpx;
	padding: 0 10rpx 3rpx;
	border-bottom: 1px solid #555555;
	/* margin-top: 20upx; */
}

