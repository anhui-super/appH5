.details {
  position: absolute;
  bottom: 0;
  left: 0;
  height: 100%;
  width: 100%;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
  overflow-y: auto;
}
.details .userImg {
    width: 70rpx;
    height: 70rpx;
    background: url(data:image/png;base64,) 0 0 no-repeat;
    background-size: 100%;
    position: absolute;
    left: 20rpx;
    top: 20rpx;
}
.details .content {
    font-size: 28rpx;
    color: #333;
    height: calc( 100% - 140rpx);
    overflow-y: auto;
    width: calc( 100% - 120rpx);
    margin-left: 100rpx;
    padding: 20rpx 0;
}
.details .content .userName .auther {
      padding: 2rpx 10rpx;
      color: #fff;
      font-size: 20rpx;
      margin-left: 10rpx;
      background: #F0AD4E;
      border-radius: 7rpx;
}
.details .content .userTime {
      font-size: 22rpx;
      margin: 5rpx 0 20rpx 0;
      color: #999;
}
.details .content rich-text {
      font-size: 26rpx;
}
.details .content .comments {
      background: #f8f8f8;
      padding: 20rpx 20rpx 1rpx 20rpx;
      font-size: 24rpx;
      margin-top: 40rpx;
}
.details .content .comments .item {
        margin-bottom: 25rpx;
}
.details .content .comments .item .one {
          color: #93b9fe;
          padding-right: 10rpx;
}
.details .content .comments .item .time {
          font-size: 20rpx;
          color: #999;
}
.details .content .comments .note {
        font-size: 22rpx;
        text-align: center;
        padding-bottom: 40rpx;
        color: #999;
}
.details .content .comments .note .notImg {
          width: 150rpx;
          height: 150rpx;
          margin: 0 auto;
          display: block;
}
.details .foot {
    position: relative;
    bottom: 0;
    left: 0;
    width: 100%;
    background: #f8f8f8;
    height: 100rpx;
    border-top: 1px solid #dadada;
    padding: 10rpx 20rpx 10rpx;
    -webkit-box-sizing: border-box;
            box-sizing: border-box;
}
.details .foot .toName {
      line-height: 80rpx;
      font-size: 24rpx;
      display: inline-block;
      vertical-align: top;
}
.details .foot .edit {
      height: 80rpx;
      display: inline-block;
      vertical-align: top;
      font-size: 24rpx;
      padding-left: 10rpx;
}

